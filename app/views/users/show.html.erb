<div>
  <h1>User Info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<div>
  <p>投稿ユーザー画像：<%= image_tag @user.get_profile_image(100,100) %></p>
  <table class="table">
    <tbody>
      <tr></tr>
    <tr>
	    <th>name <%= @user.name %></th>
    </tr>
    <tr>
	    <th>introduction <%= @user.introduction %></th>
	    <th></th>
    </tr>
    </tbody>
  </table>
  <%= link_to "edit", edit_user_path(@user.id) %>
</div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit "Create Book" %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<%= image_tag book.user.get_profile_image(100,100) %>
  <p>Title</p>
  <span><%= book.title %></span>

  <P>Opinion</P>
  <span><%= book.body %></span>
<% end %>