<h1>User info</h1>
<h4>name</h4>
<h4>introduction</h4>

<h1>Books</h1>
<h4>title</h4>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit "Create Book" %>
<% end %>


<h1>Book detail</h1>

<% @books.each do |book| %>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= link_to current_user.name, user_path(current_user.id) %>
        <%= image_tag book.user.get_profile_image(100,100) %>
      </td>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(@book) %>
      </td>
      <td>
        <%= link_to "Destroy", books_path %>
      </td>
    </tr>
  </tbody>
</table>
<% end %>







