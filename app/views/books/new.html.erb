<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
     <%= render "users/user", user: @user, book: @book %>
     <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
      

       <table class="table table-hover table-inverse">
         <thred>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thred>
         <tbody>
           <% @books.each do |book| %>
           <tr>
             <td>
                <%= image_tag book.current_user.get_profile_image(100,100) %></br>
             </td>
             <td>
                <%= book.current_user.title %>
             </td>
             <td>
                 <%= book.current_user.body %>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
     </div>
  </div>
</div>





<h1>画像投稿フォーム</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.file_field :title %>
    <h4>Opinion</h4>
      <%= f.text_field :body %>
    <%= f.submit 'Create Book' %>
  <% end %>