<h1>Editing Book</h1>

<div class="form-group">
 <%= form_with model: @book do |f| %>
  <label for="book-title">Title</label>
  <%= f.text_field :title %>
</div>

<div class="form-group">
   <label for="book-body">Opinion</label>
  <%= f.text_area :body %>
</div>

<div class="form-group">
  <%= f.submit "Update Book" %>
  <% end %>
</div>

<%= link_to "Show", book_path(@book) %>
<%= "|" %>
<%= link_to "Back", books_path %>